    width: 100vw;
  }
  .img_heroWave {
    width: 2000px;
    top: 64vw;
  }
  .img_categoryWave {
    width: 250%;
  }
  .img_categoryWave.rackets {
    top: 260px;
  }
  .img_categoryWave.equipment {
    top: 180px;
  }

  .textWrap_homeCategory.reversed.rackets {
    margin-bottom: 40px;
  }

  .imgWrap_homeCategory {
    width: 100%;
    margin-top: 30px;
  }
  .imgWrap_homeCategory.rackets {
    width: 100%;
    height: 85vw;
  }
  .imgWrap_homeCategory.clothing {
    width: 100%;
  }
  .imgWrap_homeCategory.equipment {
    width: 100%;
  }

  .img_homeCategory.shirt {
    margin-bottom: 30px;
  }

}