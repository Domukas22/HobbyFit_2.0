section.hero_2 {
  padding-top: 0px;
  position: relative;
  height: calc(100vh - 60px);
  max-height: 1000px;
}
.container.hero_2 {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  position: relative;
}

.heroSideImgWRAP {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center
}
.sideHeroIMG {
  position: absolute;
  z-index: 2;
  height: 140%;
  top: 130px;
}
.sideHeroIMG.left {
  rotate: -25deg;
}
.sideHeroIMG.right {
  rotate: 25deg; 
}

.heroCenterWRAP {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.homeHeroHEADING {
  color: var(--color_Main);
}
.heroCenterImgWRAP {
  height: 300px;
  width: 100%;
  margin: 30px 0;

  display: flex;
  align-items: center;
  justify-content: center;

  position: relative;
}
.heroCenterIMG {
  width: 260px;
  height: 100%;
  object-fit: contain;
  position: relative;
  z-index: 1;
}
.heroWaveIMG {
  position: absolute;
  height: 350px;
  object-fit: contain;
}
.heroCenterBtnWRAP {
  display: grid;
  grid-template-columns: auto auto;
  column-gap: 8px;
  position: relative;
  z-index: 5;
}

.arrowBoxWRAP {
  position: absolute;
  z-index: 5;
  bottom: 46px;
  padding: 20px 20px;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;

  transform: translateY(0px);
  animation: arrowMove 3000ms ease-in-out infinite;
}
.arrowBOX {
  width: 30px;
  height: 12px;
  justify-content: center;
  align-items: center;
  display: flex;
  position: relative;
}
.arrowLINE {
  width: 2px;
  height: 15px;
  background-color: #797979;
  border-radius: 20px;
  position: absolute;
  transform: rotate(-40deg);
}
.arrowLINE.right {
  right: 18px;
}
.arrowLINE.left {
  left: 19px;
  transform: rotate(40deg);
}
 @keyframes arrowMove {
  0%{transform: translateY(0px)}
  50%{transform: translateY(12px)}
  100%{transform: translateY(0px)}
 }

.heroFADE {
  height: 60px;
  width: 100%;
  background: linear-gradient(180deg,rgba(255,255,255,0) 0%,#FFF);
  position: absolute;
  bottom: 0;
  z-index: 3;
}






